{
  "name": "project-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "i18next": "^21.6.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.2",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "i18next-parser": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.1",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "yarn run watch-translation & react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier:lint": "prettier . --check --ignore-unknown",
    "prettier:fix": "prettier . --write --list-different --ignore-unknown",
    "eslint:lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "eslint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "lint": "npm-run-all -c --parallel prettier:lint eslint:lint --silent",
    "lint:fix": "npm-run-all -c --sequential prettier:fix eslint:fix --silent",
    "extract-translation": "i18next 'src/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' [-oc] --silent",
    "watch-translation": "npm-watch extract-translation"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "watch": {
    "extract-translation": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  }
}
